apply plugin: 'com.android.application'

buildscript {
    repositories {
        mavenCentral()
        google()
        jcenter()
    }

    dependencies {
        classpath 'com.android.tools.build:gradle:3.4.3'
		//3.2.0 or 3.2.1 can be used for Unity 2018.3, 2018.4 up to and including 2018.4.3f1, and 2019.1 up to and including 2019.1.6f1
		//3.4.0 to 3.4.3 can be used for Unity 2018.4.4f1+, 2019.1.7f1+, 2020+
    }
}

allprojects {
    repositories {
        mavenCentral()
        google()
        jcenter()
        flatDir {
            dirs 'libs'
        }
    }
}

dependencies {
    implementation fileTree(dir: 'libs', include: ['*.jar'])
    implementation(name: 'NutakuSDKNative', ext:'aar')
    implementation(name: 'NutakuSDKUnity', ext:'aar')
    implementation 'androidx.legacy:legacy-support-v4:1.0.0' // used by Nutaku SDK
	implementation 'com.squareup.okhttp3:okhttp:4.8.1' // used by Nutaku SDK
    implementation 'com.google.code.gson:gson:2.8.5' // used by Nutaku SDK
	//implementation 'androidx.appcompat:appcompat:1.1.0' // you may add this if your game has dependencies on this
    //implementation project('unity-android-resources') // enable this if you do need to have stuff in Assets/Plugins/Android/res folder for game-specific reasons
}

android {
    compileSdkVersion 29
    buildToolsVersion '30.0.2'

    compileOptions {
        sourceCompatibility JavaVersion.VERSION_1_8
        targetCompatibility JavaVersion.VERSION_1_8
    }

    defaultConfig {
        minSdkVersion 21
        targetSdkVersion 30
        ndk {
            abiFilters 'armeabi-v7a'
        }
        versionCode 1
        versionName '0.1'
        consumerProguardFiles 'proguard-unity.txt'
    }

    lintOptions {
        abortOnError false
    }

    aaptOptions {
        //noCompress = ['.unity3d', '.ress', '.resource', '.obb'] + unityStreamingAssets.tokenize(', ')
        ignoreAssetsPattern = "!.svn:!.git:!.ds_store:!*.scc:.*:!CVS:!thumbs.db:!picasa.ini:!*~"
    }

    buildTypes {
        debug {
            minifyEnabled false
            useProguard false
            proguardFiles getDefaultProguardFile('proguard-android.txt'), 'proguard-unity.txt'
            jniDebuggable true
        }
        release {
            minifyEnabled false
            useProguard false
            proguardFiles getDefaultProguardFile('proguard-android.txt'), 'proguard-unity.txt'
            signingConfig signingConfigs.debug
        }
    }

    packagingOptions {
        doNotStrip '*/armeabi-v7a/*.so'
        doNotStrip '*/x86/*.so'
    }

